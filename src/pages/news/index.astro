---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const news = await getCollection('news');
  return news.map((item: CollectionEntry<'news'>) => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

const newsItems = await getCollection('news');
const sortedNews = newsItems.sort((a: CollectionEntry<'news'>, b: CollectionEntry<'news'>) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<Layout title="IT Новости">
  <div class="max-w-[1800px] mx-auto px-6 lg:px-12 py-24">
    <header class="mb-16 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">IT Новости</h1>
      <p class="text-xl text-brand-muted max-w-2xl mx-auto">
        Актуальные новости из мира технологий, AI и автоматизации
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedNews.map((item: CollectionEntry<'news'>) => (
        <article class="bg-brand-surface/50 border border-white/10 rounded-2xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300 backdrop-blur-sm">
          {item.data.image && (
            <img 
              src={item.data.image} 
              alt={item.data.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <time datetime={item.data.pubDate.toISOString()} class="text-sm text-brand-muted">
                {item.data.pubDate.toLocaleDateString('ru-RU')}
              </time>
              {item.data.category && (
                <span class="text-sm bg-brand-accent/20 text-brand-accent px-2 py-1 rounded">
                  {item.data.category}
                </span>
              )}
            </div>
            
            <h2 class="text-xl font-bold mb-3">{item.data.title}</h2>
            <p class="text-brand-muted mb-4">{item.data.description}</p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {item.data.tags?.map((tag: string) => (
                <span class="text-xs bg-white/10 text-brand-accent px-2 py-1 rounded">
                  #{tag}
                </span>
              ))}
            </div>
            
            {item.data.source && (
              <div class="text-sm text-brand-muted">
                Источник: {item.data.source}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>