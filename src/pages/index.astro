---
import Layout from '../layouts/Layout.astro';
import LegacyHero from '../components/LegacyHero.jsx'; 
import CompetenciesSection from '../components/sections/CompetenciesSection';
import SolutionsSection from '../components/sections/SolutionsSection';
import ApproachSection from '../components/sections/ApproachSection';
import ContactSection from '../components/sections/ContactSection';
---

<Layout title="Run Swift Studio | Автоматизация бизнеса">
	<main class="bg-background min-h-screen">
	
		<!-- 1. HERO (КОМЕТЫ + БУКВЫ) -->
		<div class="relative z-10">
			<!-- Используем новый оптимизированный компонент -->
			<LegacyHero client:load />
		</div>
	
		<!-- 2. MAIN SECTIONS -->
		<div class="relative z-20 bg-background">
			<CompetenciesSection client:visible />
			<SolutionsSection client:visible />
			<ApproachSection client:visible />
			<ContactSection client:visible />
		</div>
		
	</main>
</Layout>