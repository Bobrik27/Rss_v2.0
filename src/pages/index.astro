---
import Layout from '../layouts/Layout.astro';
import WorkflowVisual from '../components/WorkflowVisual.astro';
import Competencies from '../components/Competencies.astro';
import Solutions from '../components/Solutions.astro';
import Approach from '../components/Approach.astro';
// Джун назвал компонент комет так, используем его
import OldProjectHero from '../components/OldProjectHero.jsx'; 
---
  
<Layout title="Главная">

	<main class="bg-brand-bg">
	
	<!-- 1. HERO (КОМЕТЫ + БУКВЫ) -->
	<div class="relative z-10">
		<OldProjectHero client:load />
	</div>
	
		<!-- 2. СЕКЦИЯ С ОПИСАНИЕМ И СХЕМОЙ -->
		<!-- -mt-1 и bg-brand-bg убирают стыки -->
		<section class="relative z-20 -mt-1 bg-brand-bg pt-20 pb-32 overflow-hidden min-h-screen flex items-center" id="services">
			
			<!-- Фоновые эффекты -->
			<div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1400px] h-[800px] bg-brand-accent/10 blur-[150px] rounded-full pointer-events-none opacity-40"></div>
			<div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-15 mix-blend-overlay"></div>

			<div class="relative z-10 max-w-[1800px] mx-auto px-6 lg:px-12 grid lg:grid-cols-2 gap-20 items-center">
				
				<!-- Левая часть: Текст -->
				<div class="space-y-10 animate-fade-in-up">
					<div class="inline-flex items-center gap-3 px-5 py-2 rounded-full bg-brand-accent/10 border border-brand-accent/20 text-brand-accent text-sm font-semibold tracking-wide uppercase">
						<span class="relative flex h-2.5 w-2.5">
						  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-accent opacity-75"></span>
						  <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-brand-accent"></span>
						</span>
						Automate Everything
					</div>
					
					<h1 class="text-5xl lg:text-7xl 2xl:text-8xl font-bold leading-tight tracking-tight">
						Скорость <br/>
						<span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-accent to-purple-500">твоего бизнеса</span>
					</h1>
					
					<p class="text-xl 2xl:text-2xl text-brand-muted max-w-2xl leading-relaxed">
						Замените рутину на умных Telegram-ботов. Интегрируем CRM, AI и платежи в единый механизм. Работает 24/7, не просит зарплату.
					</p>
					
					<div class="flex flex-col sm:flex-row gap-5 pt-4">
						<a href="https://t.me/tvoj_bot" target="_blank" class="bg-brand-accent hover:bg-brand-accentHover text-white px-10 py-5 rounded-2xl font-bold text-xl shadow-xl shadow-brand-accent/20 transition transform hover:-translate-y-1 text-center">
							Обсудить проект
						</a>
						<a href="#cases" class="px-10 py-5 rounded-2xl font-bold text-xl border border-white/10 hover:bg-white/5 transition flex items-center justify-center gap-3 group">
							Кейсы <span class="group-hover:translate-x-1 transition">→</span>
						</a>
					</div>
				</div>

				<!-- Правая часть: ВИЗУАЛИЗАЦИЯ -->
				<!-- Вот тут должен быть наш WorkflowVisual -->
				<div class="relative hidden lg:block w-full">
					<WorkflowVisual />
				</div>

			</div>
		</section>
		
		<!-- 3. NEW SECTIONS -->
		<div class="relative z-20 bg-brand-bg">
			<Competencies />
			<Solutions />
			<Approach />
		</div>
	</main>
</Layout>